{
	"name": "@asteres/neatui-vue",
	"description": "基于 Vue3 的 UI 组件库",
	"version": "0.0.3",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build:pkg": "vite build",
		"preview": "vite preview",
		"g:c": "node scripts/index.js template",
		"build:types": "vue-tsc -d  --emitDeclarationOnly -p tsconfig.types.json --outDir types",
		"build": "pnpm build:types & pnpm build:pkg & pnpm build:docs",
		"build:docs": "vite build -c docs.config.ts"
	},
	"devDependencies": {
		"@types/node": "^20.11.5",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"@vitejs/plugin-vue": "^5.0.3",
		"eslint": "^8.56.0",
		"eslint-plugin-vue": "^9.20.1",
		"less": "^4.2.0",
		"ph-utils": "^0.4.2",
		"prettier": "^3.2.4",
		"typescript": "^5.3.3",
		"vite": "^5.0.11",
		"vue-tsc": "^1.8.27"
	},
	"peerDependencies": {
		"ph-utils": "^0.4.2",
		"vue": "^3.3.11"
	},
	"files": ["lib", "style", "types"],
	"main": "./lib/neatui.js",
	"module": "./lib/neatui.js",
	"types": "./types/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/neatui.js",
			"require": "./lib/neatui.js"
		},
		"./style/*": "./style/*"
	}
}
